[<%= @backupname %>]
description = "<%= @description %>"
ssh_command = ssh <%= @user %>@<%= @host %>
conninfo = host=<%= @host %> user=<%= @user %> port=<%= @port %>
retention_policy_mode = <%= @retention_policy_mode %>
retention_policy = RECOVERY WINDOW OF <%= @recovery_window_days %> days
wal_retention_policy = main
backup_options = <%= @backup_options %>
